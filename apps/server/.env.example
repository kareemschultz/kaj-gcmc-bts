# ==============================================================================
# GCMC-KAJ API Server - Environment Variables
# ==============================================================================
# SECURITY: Never commit actual secrets to version control
# Copy this file to .env and fill in with actual values

# Database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# SECURITY: Use strong password - generate with: openssl rand -base64 32 | tr -d '/+=' | cut -c1-32
DATABASE_URL="postgresql://postgres:<GENERATE_STRONG_PASSWORD>@localhost:5432/gcmc_kaj"

# Better-Auth secret for session encryption
# SECURITY: Generate with: openssl rand -base64 32
# REQUIRED: This MUST be unique and never shared
BETTER_AUTH_SECRET="<GENERATE_WITH_openssl_rand_-base64_32>"

# Better-Auth URL (backend URL)
# Production: https://api.your-domain.com
# Development: http://localhost:3000
BETTER_AUTH_URL="http://localhost:3000"

# CORS origin (frontend URL)
# Production: https://app.your-domain.com
# Development: http://localhost:3001
CORS_ORIGIN="http://localhost:3001"

# Client portal URL for emails and links
# Production: https://portal.your-domain.com
# Development: http://localhost:3002
PORTAL_URL="http://localhost:3002"

# Support email address
SUPPORT_EMAIL="support@example.com"

# Redis URL for rate limiting and job queues
# Development: redis://localhost:6379
# Production: Use managed Redis service (e.g., AWS ElastiCache, Redis Cloud, Upstash)
# Format: redis://[username:password@]host[:port][/database]
REDIS_URL="redis://localhost:6379"

# MinIO Configuration (S3-compatible object storage)
# SECURITY: Generate strong credentials for MinIO in production
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_USE_SSL="false"
MINIO_ACCESS_KEY="<GENERATE_UNIQUE_USERNAME>"
MINIO_SECRET_KEY="<GENERATE_STRONG_PASSWORD>"
MINIO_REGION="us-east-1"

# Node environment
NODE_ENV="development"

# Logging level
LOG_LEVEL="info"

# Email provider: "log" (development), "resend", or "smtp"
EMAIL_PROVIDER="log"
