{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"hono": "catalog:",
		"@trpc/server": "catalog:",
		"@hono/trpc-server": "^0.4.0",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@GCMC-KAJ/api": "workspace:*",
		"@GCMC-KAJ/auth": "workspace:*",
		"@GCMC-KAJ/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"@types/bun": "^1.2.6",
		"tsdown": "catalog:",
		"@GCMC-KAJ/config": "workspace:*"
	}
}
