# GCMC-KAJ Production Environment Configuration
# Copy this file to .env.production and configure with your production values

# Database Configuration
DB_NAME=gcmc_kaj_prod
DB_USER=gcmc_user
DB_PASSWORD=super_secure_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@database:5432/${DB_NAME}?connection_limit=20&pool_timeout=20&connect_timeout=60

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# MinIO S3 Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_access_key_here
MINIO_SECRET_KEY=minio_secret_key_here
MINIO_BUCKET_NAME=gcmc-kaj-storage
MINIO_USE_SSL=false

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_32_chars_min
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@company.com

# Guyana Revenue Authority (GRA) Integration
GRA_API_URL=https://api.gra.gov.gy
GRA_API_KEY=your_gra_api_key_here
GRA_CLIENT_ID=your_gra_client_id
GRA_CLIENT_SECRET=your_gra_client_secret

# Security Configuration
JWT_SECRET=your_jwt_secret_256_bits_minimum
ENCRYPTION_KEY=your_encryption_key_32_bytes
BCRYPT_ROUNDS=12

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Caching Configuration
CACHE_TTL_DEFAULT=300        # 5 minutes
CACHE_TTL_DASHBOARD=180      # 3 minutes
CACHE_TTL_COMPLIANCE=120     # 2 minutes
CACHE_TTL_STATIC=3600        # 1 hour

# File Storage Configuration
MAX_FILE_SIZE=52428800       # 50MB
ALLOWED_FILE_TYPES=pdf,docx,xlsx,csv,jpg,jpeg,png
PDF_RETENTION_DAYS=365
AUTO_CLEANUP_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Database Performance
DB_QUERY_TIMEOUT=30000       # 30 seconds
DB_SLOW_QUERY_THRESHOLD=1000 # 1 second
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=20

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_DELAY=5000   # 5 seconds

# Compliance Engine
COMPLIANCE_CHECK_INTERVAL=3600000  # 1 hour
DEADLINE_WARNING_DAYS=30
PENALTY_CALCULATION_ENABLED=true

# API Configuration
API_TIMEOUT=30000            # 30 seconds
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000        # 1 second

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# SSL Configuration (if using HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External Services
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=10000        # 10 seconds

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_AUDIT_LOGS=true
FEATURE_REAL_TIME_NOTIFICATIONS=true