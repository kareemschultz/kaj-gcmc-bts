{
	"name": "GCMC-KAJ",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.8.2",
			"@trpc/server": "^11.5.0",
			"@trpc/client": "^11.5.0",
			"@trpc/react-query": "^11.5.0",
			"better-auth": "^1.3.28",
			"dotenv": "^17.2.2",
			"zod": "^4.1.12",
			"typescript": "^5.8.2",
			"tsdown": "^0.16.4",
			"@prisma/client": "^6.15.0",
			"prisma": "^6.15.0",
			"react": "19.2.0",
			"react-dom": "19.2.0",
			"@types/react": "19.2.5",
			"@types/react-dom": "19.2.3",
			"@types/node": "^22.10.2"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run --workspace=api,storage,worker,web",
		"test:unit:watch": "vitest --workspace=api,storage,worker,web",
		"test:integration": "vitest run --workspace=api-integration",
		"test:integration:watch": "vitest --workspace=api-integration",
		"test:coverage": "vitest run --coverage",
		"test:coverage:report": "vitest run --coverage --reporter=html",
		"test:ci": "vitest run --coverage --reporter=junit",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"dev:worker": "turbo -F @GCMC-KAJ/worker dev",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:build": "docker compose build",
		"docker:logs": "docker compose logs -f",
		"db:push": "turbo -F @GCMC-KAJ/db db:push",
		"db:studio": "turbo -F @GCMC-KAJ/db db:studio",
		"db:generate": "turbo -F @GCMC-KAJ/db db:generate",
		"db:migrate": "turbo -F @GCMC-KAJ/db db:migrate",
		"db:migrate:deploy": "turbo -F @GCMC-KAJ/db db:migrate:deploy",
		"db:migrate:status": "turbo -F @GCMC-KAJ/db db:migrate:status",
		"db:reset": "turbo -F @GCMC-KAJ/db db:reset",
		"db:start": "turbo -F @GCMC-KAJ/db db:start",
		"db:watch": "turbo -F @GCMC-KAJ/db db:watch",
		"db:stop": "turbo -F @GCMC-KAJ/db db:stop",
		"db:down": "turbo -F @GCMC-KAJ/db db:down",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
		"test:e2e:tablet": "playwright test --project=tablet",
		"test:e2e:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
		"test:e2e:auth": "playwright test tests/e2e/auth",
		"test:e2e:enhanced-auth": "playwright test tests/e2e/auth/enhanced-login.spec.ts",
		"test:e2e:dashboard": "playwright test tests/e2e/dashboard",
		"test:e2e:crud": "playwright test tests/e2e/crud",
		"test:e2e:clients": "playwright test tests/e2e/crud/clients-management.spec.ts",
		"test:e2e:api": "playwright test tests/e2e/api",
		"test:e2e:workflows": "playwright test tests/e2e/workflows",
		"test:e2e:navigation": "playwright test tests/e2e/navigation",
		"test:e2e:visual": "playwright test tests/e2e/visual",
		"test:e2e:a11y": "playwright test tests/e2e/accessibility",
		"test:e2e:performance": "playwright test --grep @performance",
		"test:e2e:smoke": "playwright test --grep @smoke",
		"test:e2e:critical": "playwright test --grep @critical",
		"test:e2e:regression": "playwright test --grep @regression",
		"test:e2e:negative": "playwright test --grep @negative",
		"test:e2e:report": "playwright show-report",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:clean": "rm -rf test-results playwright-report allure-results allure-report",
		"allure:generate": "allure generate allure-results --clean -o allure-report",
		"allure:open": "allure open allure-report",
		"allure:serve": "allure serve allure-results",
		"allure:clean": "rm -rf allure-results allure-report",
		"test:e2e:allure": "npm run test:e2e:clean && playwright test && npm run allure:generate && npm run allure:open",
		"test:e2e:ci": "playwright test --reporter=github,allure-playwright,html",
		"test:e2e:full-suite": "npm run test:e2e:clean && npm run test:e2e:all-browsers && npm run allure:generate",
		"test:e2e:quick": "playwright test --project=chromium --grep @smoke",
		"test:e2e:parallel": "playwright test --workers=4",
		"test:e2e:sequential": "playwright test --workers=1"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-progress": "^1.1.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@react-email/components": "^1.0.1",
		"@react-email/render": "^2.0.0",
		"bcryptjs": "^3.0.3",
		"critters": "^0.0.25",
		"dotenv": "^17.2.3",
		"jspdf": "^3.0.3",
		"next": "^16.0.3",
		"react-email": "^5.0.4",
		"react-hook-form": "^7.66.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@argos-ci/playwright": "^6.3.3",
		"@axe-core/playwright": "^4.11.0",
		"@biomejs/biome": "^2.3.5",
		"@faker-js/faker": "^10.1.0",
		"@playwright/test": "^1.56.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bun": "^1.3.2",
		"@vitest/coverage-v8": "^4.0.10",
		"allure-commandline": "^2.34.1",
		"allure-playwright": "^3.4.2",
		"cross-env": "^10.1.0",
		"dotenv-cli": "^11.0.0",
		"husky": "^9.1.7",
		"jsdom": "^27.2.0",
		"lint-staged": "^16.2.6",
		"pixelmatch": "^7.1.0",
		"playwright": "^1.56.1",
		"playwright-video": "^2.4.0",
		"puppeteer": "^24.30.0",
		"sharp": "^0.34.5",
		"tsdown": "^0.16.4",
		"turbo": "^2.6.1",
		"vitest": "^4.0.9",
		"wait-on": "^9.0.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
		]
	},
	"resolutions": {
		"ioredis": "5.4.1"
	},
	"packageManager": "bun@1.3.2"
}
